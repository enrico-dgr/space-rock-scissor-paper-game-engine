{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"noEmit": true,
		"target": "es5",
		"outDir": "./dist/lib",
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"lib": ["DOM"],
		"sourceMap": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"stripInternal": true,
		"declaration": true
	},
	"include": ["./src"],
	"exclude": ["node_modules", "**/node_modules/*", "dist", "docs"]
}
